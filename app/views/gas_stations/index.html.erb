<p id="notice"><%= notice %></p>

<h1>Gas Stations</h1>

<div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
    <%= img src="https://zancada.com/wp-content/imagenes/2012/06/skyumbrella.jpeg" alt="Paraguas Azul" class="img-responsive center-block" style="max-height: 300px;">
      <div class="caption">


        <h3> Nombre: <%= gas_station.name%> </h3>
        <p>Direccion: <%= gas_station.address>%></p>
        <p><%= link_to 'Detalles' , gas_station, class: 'btn btn-primary'%>
        <p><%= link_to 'Editar', edit_gas_station_path(gas_station), class: 'btn btn-warning'%>
        <p><%= link_to 'Eliminar', gas_station, method: :delete, data:  {confirm: 'Are you sure?'} class: 'btn btn-warning'%>
        <p>Id: <%= gas_station.id_station>%></p>


        </div>
      </div>
      <% end %>
    </div>
<br>






    <% @gas_stations.each do |gas_station| %>
      <tr>
        <td><%= gas_station.address %></td>
        <td><%= image_tag gas_station.image %></td>
        <td><%= gas_station.name %></td>
        <td><%= gas_station.id_station %></td>
        <td><%= link_to 'Show', gas_station %></td>
        <td><%= link_to 'Edit', edit_gas_station_path(gas_station) %></td>
        <td><%= link_to 'Destroy', gas_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

